{{ if and (lookPath "brew") (or (and (eq .chezmoi.os "darwin") (not .isVM)) (and (eq .chezmoi.os "linux") (ne .chezmoi.osRelease.id "arch"))) -}}
#!/bin/bash

# Extract and add taps from formulae
{{- $taps := list }}
{{- if eq .chezmoi.os "darwin" }}
{{- range .pkgs.darwin.brews }}
  {{- if contains "/" . }}
    {{- $parts := . | splitList "/" }}
    {{- if eq (len $parts) 3 }}
      {{- $tap := printf "%s/%s" (index $parts 0) (index $parts 1) }}
      {{- $taps = append $taps $tap }}
    {{- end }}
  {{- end }}
{{- end }}
{{- end }}

brew bundle --file=/dev/stdin <<EOF
{{- range ($taps | uniq) }}
tap {{ . | quote }}
{{- end }}

{{- if eq .chezmoi.os "darwin" }}
{{- range .pkgs.darwin.brews }}
brew {{ . | quote }}
{{- end }}
{{- range .pkgs.darwin.casks }}
cask {{ . | quote }}
{{- end }}
{{- end }}
EOF
{{- end }}
