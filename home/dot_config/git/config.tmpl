[am]
threeWay = true

[core]
branch = auto
editor = code --wait
grep = auto
interactive = auto
longpaths = true
pager = delta
showBranch = auto
status = auto
ui = true

[diff]
tool = default-difftool
colorMoved = default

[difftool "default-difftool"]
cmd = code --wait --diff $LOCAL $REMOTE

[delta]
features = catppuccin-mocha
file-style = omit
file-decoration-style = none
hunk-label = "  Û∞°è "
side-by-side = true
navigate = true
tabs = 2
true-color = always
hyperlinks = true
hyperlinks-file-link-format = "vscode://file/{path}:{line}"

[include]
  path = ~/.config/delta/catppuccin.gitconfig
  path = ~/.config/git/gitaliases

[user]
  name = Connor Welsh
  email = {{ .email }}
  signingkey = {{ .sshId }}

[advice]
	addEmptyPathspec = false
	pushNonFastForward = false
	statusHints = false

[github]
  user = cwelsys

[gitea]
  user = cwel

[core]
  editor = code --wait
  longpaths = true
  pager = delta
  excludesFile = ~/.config/git/ignore

[color]
  ui = always
  interactive = always

{{ if eq .chezmoi.os "windows" -}}
[safe]
	directory = {{ .chezmoi.workingTree }}
  directory = ~/scoop/*
{{ else if eq .chezmoi.os "linux" "darwin" -}}
[safe]
  directory =  /opt/docker/*
{{ end -}}

[gpg]
  format = ssh

{{- if eq .osId "windows" }}
[gpg "ssh"]
  program = "C:/Users/cwel/AppData/Local/1Password/app/8/op-ssh-sign.exe"

{{- else if .isWSL }}
[gpg "ssh"]
  program = "/mnt/c/Users/cwel/AppData/Local/1Password/app/8/op-ssh-sign-wsl"

{{- else if eq .chezmoi.os "darwin" }}
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
{{- end }}

[commit]
  gpgsign = true

[help]
  autoCorrect = prompt

[log]
  date = iso

[init]
  defaultBranch = main

[push]
  autoSetupRemote = true
  default = current

[pull]
  rebase = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[receive]
	fsckobjects = true

[rerere]
  enabled = true

[interactive]
  diffFilter = delta --color-only

[delta]
  features = catppuccin-{{ .catppuccinFlavor }}
  navigate = true
  {{ .theme }} = true
  side-by-side = true
  line-numbers = true
  show-syntax-themes = true
  hyperlinks = true
  ; hyperlinks-file-link-format = "vscode://file/{path}:{line}"

[merge]
tool = code
conflictstyle = zdiff3

[diff]
tool = default-difftool
colorMoved = default

[submodule]
  fetchJobs = 8

[fetch]
	all = true
	fsckobjects = false
	prune = true

[remote]
  pushDefault = origin

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git@git.cwel.casa:"]
  insteadOf = "gitea:"
  pushInsteadOf = "git://git.cwel.casa/"

{{- if eq .osId "windows" }}
[credential "helperselector"]
  selected = manager
{{- else }} }}
[credential "https://git.cwel.casa"]
  provider = generic
{{- end }}
{{/* vim: set filetype=gitconfig: */}}
