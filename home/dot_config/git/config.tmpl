[core]
  editor = nvim
  whitespace = trailing-space,space-before-tab
  pager = delta
  excludesFile = ~/.config/git/ignore

[include]
  path = ~/.config/git/gitaliases

[pager]
  format-patch = cat
  blame = delta
  config = bat -pplproperties
  remote = bat -ppltsv

[user]
  name = Connor Welsh
  email = {{ .email }}
  signingkey = {{ .sshId }}

[github]
  user = cwelsys

[commit]
  gpgSign = true
  verbose = true

[gpg]
  format = ssh

{{ if eq .chezmoi.os "darwin" -}}
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
{{ else if eq .chezmoi.os "linux" -}}
[gpg "ssh"]
  program = "/opt/1Password/op-ssh-sign"
{{ end }}
[init]
  defaultBranch = main

[color]
  ui = auto
  interactive = auto

[branch]
  sort = -committerdate

[column]
  ui = auto

[diff]
  algorithm = histogram
  colorMoved = default
  colorMovedWS = allow-indentation-change
  context = 10
  mnemonicPrefix = true
  renames = true
  submodule = log

[fetch]
  all = true
  fsckobjects = false
  prune = true

[receive]
  fsckobjects = true

[transfer]
  fsckobjects = true

[grep]
  lineNumber = true
  extendedRegexp = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[delta]
  navigate = true
  true-color = always
  hyperlinks = true
  blame-palette = "#1e1e2e #181825 #11111b #313244 #45475a"
  file-decoration-style = "#6c7086"
  hunk-header-decoration-style = "#6c7086" box ul
	file-style = "#cdd6f4"
	commit-decoration-style = "#6c7086" bold box ul
  line-numbers-left-format = "{nm:>3} "
  line-numbers-right-format = "{np:>3}â”‚"
  hunk-header-line-number-style = bold "#a6adc8"
  minus-style = "#f38ba8"
  plus-style = "#a6e3a1"
  minus-emph-style = bold "#f38ba8"
  plus-emph-style = bold "#a6e3a1"
  line-numbers-minus-style = bold "#f38ba8"
  line-numbers-plus-style = bold "#a6e3a1"
  line-numbers-left-style = "#6c7086"
  line-numbers-zero-style = "#6c7086"
	map-styles = \
		bold purple => "#cba6f7", \
		bold blue => "#89b4fa", \
		bold cyan => "#74c7ec", \
		bold yellow => "#f9e2af"

[interactive]
  diffFilter = delta --color-only

[help]
  autoCorrect = prompt

[advice]
  addEmptyPathspec = false
  pushNonFastForward = false
  statusHints = false

[push]
  autoSetupRemote = true
  default = current

[pull]
  rebase = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  enabled = true

[merge]
  conflictstyle = zdiff3

[submodule]
  fetchJobs = 8
  recurse = true

[status]
  submoduleSummary = true

[tag]
  sort = version:refname

[remote]
  pushDefault = origin

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[credential "https://github.com"]
  helper = !gh auth git-credential

[credential "https://gist.github.com"]
  helper = !gh auth git-credential
