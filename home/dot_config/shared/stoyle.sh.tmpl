
export FZF_DEFAULT_OPTS="--color=bg+:#{{ .catppuccin.colors.surface0 }},bg:#{{ .catppuccin.colors.base }},spinner:#{{ .catppuccin.colors.rosewater }}
--color=hl:#{{ .catppuccin.colors.red }},fg:#{{ .catppuccin.colors.text }},header:#{{ .catppuccin.colors.red }}
--color=info:#{{ .catppuccin.colors.teal }},pointer:#{{ .catppuccin.colors.rosewater }},marker:#{{ .catppuccin.colors.rosewater }}
--color=fg+:#{{ .catppuccin.colors.text }},prompt:#{{ .catppuccin.colors.teal }},hl+:#{{ .catppuccin.colors.red }}
--color=border:#{{ .catppuccin.colors.surface2 }}
--layout=reverse --cycle --height=~80% --border=rounded --info=right
--bind=alt-w:toggle-preview-wrap
--bind=ctrl-e:toggle-preview"


export FZF_ALT_C_COMMAND="fd --type d --hidden --follow --exclude .git --fixed-strings --strip-cwd-prefix --color always"
export FZF_ALT_C_OPTS="--prompt='Directory  ' --preview='eza --tree --level=1 --color=always --icons=always {}' --preview-window=right:50%:border-left"
export FZF_CTRL_T_COMMAND="fd --type f --hidden --follow --exclude .git --strip-cwd-prefix --color always"
export FZF_CTRL_T_OPTS="--prompt='File  ' --preview='bat --style=numbers --color=always --line-range :500 {}' --preview-window=right:60%:border-left"

fdz() {
  local file
  file=$(fd --type file --follow --hidden --exclude .git | fzf \
    --prompt="Files> " \
    --header="CTRL-T: Switch between Files/Directories" \
    --bind="ctrl-t:transform:if not echo \$FZF_PROMPT | grep -q 'Files> '; then \
      echo change-prompt\\(Files\\> \\)+reload\\(fd --type file\\); \
      else echo change-prompt\\(Directory\\> \\)+reload\\(fd --type directory\\); fi" \
    --preview="if echo \$FZF_PROMPT | grep -q 'Files> '; then \
      bat --color=always {} --style=plain; \
      else eza -T --colour=always --icons=always {}; fi")
  [ -n "$file" ] && _fzf_open_path "$file"
}

rgz() {
  local file
  RG_PREFIX="rg --column --line-number --no-heading --color=always --smart-case"
  file=$(FZF_DEFAULT_COMMAND="$RG_PREFIX ''" fzf --ansi --disabled \
    --bind="start:reload:$RG_PREFIX {q}" \
    --bind="change:reload:sleep 0.1; $RG_PREFIX {q} || true" \
    --color="hl:-1:underline,hl+:-1:underline:reverse" \
    --delimiter=":" \
    --prompt="1. ripgrep> " \
    --header="CTRL-T: Switch between ripgrep/fzf" \
    --header-first \
    --preview="bat --color=always {1} --highlight-line {2} --style=plain" \
    --preview-window="up,60%,border-bottom,+{2}+3/3")
  [ -n "$file" ] && _fzf_open_path "$file"
}

_fzf_open_path() {
  local file="$1"
  if [[ "$file" =~ ^.*:[0-9]+:.*$ ]]; then
    file=$(echo "$file" | cut -d: -f1)
  fi
  [ ! -e "$file" ] && return

  local cmd
  cmd=$(printf "bat\ncat\ncd\nvim\ncode\nrm\necho" | fzf --prompt="Select Command> ")
  case "$cmd" in
    bat)  bat "$file" ;;
    cat)  cat "$file" ;;
    cd)   if [ -f "$file" ]; then cd "$(dirname "$file")"; else cd "$file"; fi ;;
    vim)  vim "$file" ;;
    code) code "$file" ;;
    rm)   rm -rf "$file" ;;
    echo) echo "$file" ;;
  esac
}
