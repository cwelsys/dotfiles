  - value: |
      /usr/local/sbin
      /usr/bin
      /usr/local/bin
    if: eq .OS "linux" "darwin"

  - value: |
      /opt/vagrant/bin
    if: eq .OS "darwin"

  - value: '{{ .chezmoi.homeDir }}/bin'
  - value: '{{ .chezmoi.homeDir }}/.local/bin'
  - value: '{{ env "CARGO_HOME" }}/bin'
  - value: '{{ env "GOBIN" }}'
