Host *
	AddKeysToAgent yes
	ForwardAgent yes
	StrictHostKeyChecking=no
  ServerAliveInterval 60
  ServerAliveCountMax 10
{{- if and (eq .chezmoi.os "darwin") (not .isVM) }}
	IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
{{- else }}
	IdentityFile ~/.ssh/cwel
{{- end }}
{{- if ne .hostname "main" }}
Host main
	HostName main
	User cwel

{{- end }}
{{- if ne .hostname "mba" }}
Host mba
	HostName mba
	User cwel

{{- end }}
{{- if ne .hostname "pbox" }}
Host pbox
	HostName pbox
	User cwel

{{- end }}
{{- if ne .hostname "bmac" }}
Host bmac
	HostName bmac
	User cwel
{{- end }}


